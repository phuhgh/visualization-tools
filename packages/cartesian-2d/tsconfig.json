{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "bin/",
    "noImplicitReturns": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES5",
      "ES2015.Core",
      "ES2015.Collection",
      "ES2015.Promise",
      "ES2015.Iterable",
      "ES2017.SharedMemory",
      "ES2020.BigInt",
      "DOM"
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src",
  ]
}